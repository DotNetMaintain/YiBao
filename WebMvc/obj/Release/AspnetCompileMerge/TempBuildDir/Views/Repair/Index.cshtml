@{
    Page.CheckApp = false;
    ViewBag.Title = "报修列表";
    Business.Platform.Organize borganize = new Business.Platform.Organize();
}
@model List<Data.Model.Repair>


<link type="text/css" href="../../manage/Style/InterFace.Css" rel="stylesheet" rev="stylesheet" media="all" />
<link type="text/css" href="../../manage/style.css" rel="stylesheet" rev="stylesheet" media="all" />
<script type="text/javascript" src="../../js/jquery.js"></script>
<script type="text/javascript" src="../../manage/include/common.js"></script>
<script type="text/javascript">
    var win = new RoadUI.Window();
    var validate = new RoadUI.Validate();
</script>
<body>

    <form action="" method="post">
        @Html.AntiForgeryToken()
        <div id="interface_inside">
            <div id="interface_quick">
                <div class="interface_quick_left">您现在的操作 >> 我的工具 >> 报修列表</div>
                <div class="interface_quick_right">
                    <a href="javascript:void(0)" onclick="javascript:window.location.replace(window.location.href);"><img style="vertical-align:middle;" src="../../manage/images/reload.png" /><strong>刷新</strong></a>
                    &nbsp; &nbsp;
                    <a href="javascript:history.back();"><img style="vertical-align:middle;" src="../../manage/images/ico_up1.gif" /><strong>后退</strong></a>
                </div>
                <div class="clearboth"></div>
            </div>
            <div id="interface_main">
                <div id="tabs_config" class="tabsbox">

                    <div class="clearboth"></div>

                    <div class="toolbar" style="margin-top:0; border-top:none 0; position:fixed; top:0; left:0; right:0; margin-left:auto; z-index:999; width:100%; margin-right:auto; height:26px;">
                        <div>

                            <a href="#" onclick="fun_29b358e1ad644f09846c4554ae6b85c4();return false;" title="打印当前表单">
                                <span style="background:url(/Images/ico/printer.gif) no-repeat left center;">打印</span>
                            </a>
                            <script type="text/javascript">
                                function fun_29b358e1ad644f09846c4554ae6b85c4() { formPrint(); }
                            </script>

                        </div>
                    </div>

                    <!-- 模块 -->

                    <table style=" width:100%;" border="0" cellspacing="0" cellpadding="0">
                        <tr>
                            <td>

                                <div id="config_basic1" class="tabs_wrapper">
                                    <div class="tabs_main" align="left">
                                        <div id="PanelConfig">

                                            <div id="PanelDefault">

                                                <table class="table">
                                                    <thead>
                                                        <tr>
                                                            <td>报修物品名称</td>
                                                            <td>型号</td>
                                                            <td>数量</td>
                                                            <td>时间</td>
                                                            <td>报修人</td>
                                                            <td>备注</td>
                                                        </tr>
                                                    </thead>

                                                    <tbody>

                                                        @foreach (var repairlist in @Model)
                                                        {
                                                            <tr>
                                                                <td width="90">@repairlist.name</td>
                                                                <td width="90">@repairlist.type</td>
                                                                <td width="90">@repairlist.quantity</td>
                                                                <td width="175">@repairlist.AddTime</td>
                                                                <td>@borganize.GetName(repairlist.UserID)</td>
                                                                <td width="220">@repairlist.remark</td>
                                                               

                                                            </tr>
                                                        }


                                                    </tbody>
                                                </table>

                                                <table class="table">
                                                    <tr>
                                                        <td class="page">
                                                            <span style="float:left;" id=num runat=server></span>
                                                            &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<uc1:Page ID="Page1" runat="server" />&nbsp;&nbsp;&nbsp;&nbsp;
                                                        </td>
                                                    </tr>
                                                </table>

                                                <br />

                                            </div>

                                        </div>
                                    </div>
                                </div>
                            </td>
                        </tr>
                    </table>
                    <!-- 模块 -->

                </div>
            </div>
        </div>
    </form>
</body>
